---
title: "Login"
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet"  href="./login.less" />
    <title>{{title}}</title>
</head>
<body>
<section class="login-page__wrapper">
    <div class="login">
        <h2 class="login__title">{{title}}</h2>
        <div class="login__wrapper">

            {{>input-form
                    title="input-form"
                    span-class="input-form__title"
                    input-class="input-form__input"
                    input-type="text"
                    input-name="login"
                    input-placeholder="AMukhtarov"
            }}

            {{>input-form
                    title="input-form"
                    span-class="input-form__title"
                    input-class="input-form__input"
                    input-type="password"
                    input-name="password"
                    input-placeholder="••••••••••••"
            }}

            {{>button-link href="./chat.hbs" label="Sign in" class="button-link"}}
            {{>text-link class="text-link" href="./registration.hbs" label="Sign Up"}}

        </div>
    </div>
</section>
</body>
</html>