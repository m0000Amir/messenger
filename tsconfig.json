{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "declaration": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "lib": ["ESNext", "DOM"],
  "exclude": ["dist", "node_modules"],
  "include": ["./**/*.ts"],
  "ts-node": {
    "files": true
  }
}
